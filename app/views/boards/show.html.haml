.container
  %h2= @board.name
  - @tasks.each do |task|
    = link_to board_task_path(task) do
      .task
        - if task.eyecatch.attached?
          .task_image
            = image_tag task.eyecatch
        .task_title
          = task.title
        .task_content
          = task.content
        .task_icon
          = image_tag 'default-avatar.png', class: 'task_avatar'
  - if user_signed_in?
    .add_task
      = link_to("+ Add new card", new_board_task_path(@board), {class: "add_task_content"})
